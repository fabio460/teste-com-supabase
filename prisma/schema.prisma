datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
        

model Usuario {
  // id      Int      @id @default(autoincrement())
  id String  @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  nome    String?
}